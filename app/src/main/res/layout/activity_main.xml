<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBody"
    tools:context="com.ciscoedge.myappportfolio.MainActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:id="@+id/body">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/txtMyNanodegreeApps"
            android:fontFamily="@string/abc_font_family_subhead_material"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="POPULAR MOVIES"
            android:id="@+id/button7"
            android:background="#F28A38"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/txtMyNanodegreeApps"
            android:layout_alignRight="@+id/txtMyNanodegreeApps"
            android:layout_alignEnd="@+id/txtMyNanodegreeApps"
            android:onClick="displayMessage"/>

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="STOCK HAWK"
            android:id="@+id/button2"
            android:background="#F28A38"
            android:layout_below="@+id/button7"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignStart="@+id/button7"
            android:onClick="displayMessage"/>

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="BUILD IT BIGGER"
            android:id="@+id/button"
            android:background="#F28A38"
            android:layout_below="@+id/button2"
            android:layout_alignLeft="@+id/button2"
            android:layout_alignStart="@+id/button2"
            android:onClick="displayMessage"/>

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="MAKE YOUR APP MATERIAL"
            android:id="@+id/button6"
            android:background="#F28A38"
            android:layout_below="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"
            android:onClick="displayMessage"/>

        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="GO UBIQUITOUS"
            android:id="@+id/button5"
            android:background="#F28A38"
            android:layout_below="@+id/button6"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6"
            android:onClick="displayMessage"/>


        <Button
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="CAPSTONE"
            android:id="@+id/button4"
            android:background="#D60745"
            android:layout_below="@+id/button5"
            android:layout_alignLeft="@+id/button5"
            android:layout_alignStart="@+id/button5"
            android:onClick="displayMessage"/>

    </RelativeLayout>

</ScrollView>